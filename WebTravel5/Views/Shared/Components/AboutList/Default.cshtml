@model List<EntityLayer.Concrete.About>

<section class="w3l-content-6 py-5">
    <div class="container py-lg-5">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-lg-6 content-6-left pr-lg-5">
                    <h6 class="sub-title">Niyə bizi seçməlisiniz</h6>
                    <h3 class="hny-title">Həyat Sizin Rahatlıq Zonanızın Sonunda Başlar.</h3>
                </div>
                <div class="col-lg-6 content-6-right mt-lg-0 mt-4">
                    <p class="mb-3">
                        @item.Description
                    </p>
                    <p class="mb-3">
                        @item.Description2
                    </p>
                </div>
            </div>
        }
    </div>
</section>
