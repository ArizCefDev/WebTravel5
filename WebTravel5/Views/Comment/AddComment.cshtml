
<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Yorum yazın</h4>
    <p class="mb-4">
        İşarətlənən yerləri zəhmət olmasa doldurun *
    </p>
    <form method="post" asp-action="AddComment" asp-controller="Comment">

        <div class="form-group">
            <textarea name="Content" class="form-control" placeholder="Mətini girin*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="CommentUser" class="form-control" placeholder="Adınızı girin*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="text" name="DestinationID" class="form-control" placeholder="İD ni girin*" required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorumu göndər </button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
