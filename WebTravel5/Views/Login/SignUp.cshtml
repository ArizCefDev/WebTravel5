@model WebTravel5.Models.UserRegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>WebTravel5.com</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function() {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tag Keywords -->
    <!--/Style-CSS -->
    <link rel="stylesheet" href="~/Login/css/style.css" type="text/css" media="all" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <!--//Style-CSS -->
</head>

<body>
    <!-- /login-section -->
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                    </div>
                </div>
                <div class="form-left">
                    <div class="middle">
                        <h4>Bizə qatılın</h4>
                    </div>
                    <form action="#" method="post" class="signin-form">
                        <div class="form-input">
                            <label>Adınız</label>
                            <input type="text" asp-for="Name" />
                            <span asp-validation-for="Name" class="textdanger"></span>
                        </div>
                        <div class="form-input">
                            <label>Soyadınız</label>
                            <input type="text" asp-for="Surname" />
                            <span asp-validation-for="Surname" class="textdanger"></span>
                        </div>
                        <div class="form-input">
                            <label>İstifadəçi adınız</label>
                            <input type="text" asp-for="UserName" />
                            <span asp-validation-for="UserName" class="textdanger"></span>
                        </div>
                        <div class="form-input">
                            <label>Gmail adresiniz</label>
                            <input type="text" asp-for="Mail" />
                            <span asp-validation-for="Mail" class="textdanger"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifrəniz</label>
                            <input type="password" asp-for="Password" />
                            <span asp-validation-for="Password" class="textdanger"></span>
                        </div>
                        <div class="form-input">
                            <label>Təkrar Şifrə</label>
                            <input type="password" asp-for="ConfirmPasword" />
                            <span asp-validation-for="ConfirmPasword" class="textdanger"></span>
                        </div>
                        <div class="textdanger" asp-validation-summary="ModelOnly">
                        
                        </div>
                        <label class="container">
                            Bütün <a href="#"> Şərtləri </a> qəbul <a href="#">edirəm</a>
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <button class="btn">Hesab yarat</button>
                    </form>
                </div>

            </div>

        </div>
    </section>
    <!-- //login-section -->
</body>

</html>
