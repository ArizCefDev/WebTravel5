@model EntityLayer.Concrete.Comment
@{
    ViewData["Title"] = "CommentDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Admin Panel /</span> Yorumlar</h4>

        <!-- Basic Layout & Basic with Icons -->
        <div class="row">
            <!-- Basic Layout -->
            <div class="col-xxl">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">Güncəlləmə səyfəsi</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" for="basic-default-name">Yazan</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="CommentUser" class="form-control" id="basic-default-name" />
                                </div>
                            </div>
                            <br />
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" for="basic-default-name">Tarix</label>
                                <div class="col-sm-10">
                                    <input type="date" asp-for="Date" class="form-control" id="basic-default-name" />
                                </div>
                            </div>
                            <br />
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" for="basic-default-name">Səyahət yeri</label>
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(x=>x.DestinationID,(List<SelectListItem>) ViewBag.c,new {@class="form-control"})
                                </div>
                            </div>
                            <br />
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" for="basic-default-message">Mətn</label>
                                <div class="col-sm-10">
                                    <textarea id="basic-default-message"
                                              asp-for="Content"
                                              class="form-control"
                                              placeholder="Açıqlamanı daxil edin"
                                              aria-label="Hi, Do you have a moment to talk Joe?"
                                              aria-describedby="basic-icon-default-message2"></textarea>
                                </div>
                            </div>
                            <div class="row justify-content-end">
                                <div class="col-sm-10">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- / Content -->
